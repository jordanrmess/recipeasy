<div class="row">
    <div class="col">
        <div class="jumbotron">
            <h1 class="display-4 font-weight-bold jumbtitle">Welcome to Recipeasy</h1>
            <p class="lead">An <span class="jumbtitle">"easy"</span> way to find recipes that fit exactly your needs.</p>
            <hr class="my-4">
            <div class="row">
                <div class="col">
                    <a href="/add">
                        <button type="submit" class="btn btn-dark">Or, join our community and add a recipe</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center spacer">
    <div class="col-5">
        <h2>
            Search from all of our recipes:
        </h2>
    </div>
    <div class="col-4">
        <form class="">
            <input id="searchbar" class="form-control" type="search" placeholder="Search">
        </form>
    </div>
</div>
<div class="row justify-content-center spacer">
    <div class="col" id="sorry">
    </div>
</div>

<div id="results" class="row">
    <div class="col">
        <div id="recipe" class="list-group">
            {{#each recipes}}
            <a id="item" href="/recipe/{{this}}" class="list-group-item list-group-item-action ">
                {{this}}
            </a> {{/each}}
        </div>
    </div>
</div>
<script>
    $('#searchbar').keydown(function () {
        $('#results').show();

        var input, filter, ul, li, a, i, txtValue;
        input = document.getElementById("searchbar");
        filter = input.value.toUpperCase();
        d = document.getElementById("recipe");
        a = d.getElementsByTagName("a");
        var len = 0;
        for (i = 0; i < a.length; i++) {
            txtValue = a[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                a[i].style.display = "";
            } else {   
                len += 1;
                a[i].style.display = "none";
            }
        }
        if (a.length == len) {
            $('#sorry').text('Sorry! No Results.');
            $('#results').hide();
        }
    });
</script>